<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/item_layer"
    android:descendantFocusability="blocksDescendants"
>

    <!--ListView의 각 셀에 데이터가 들어갈 텍스트 라벨-->
    <TextView
        android:visibility="gone"
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="test"
        android:textColor="#000000"
        android:textSize="20dp" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumbnail"
android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_width="150dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
        android:text="에펠탑"
        android:textSize="20dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:text="seankim"
            android:textSize="15dp"
            android:id="@+id/makername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center|left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="2019-05-17"
                android:textSize="15dp"
                android:id="@+id/uploadat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
             android:src="@drawable/icn_unlike"
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/icn_setcheck"
                android:id="@+id/isFin"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
android:layout_margin="10dp"
        android:layout_gravity="center"
        android:id="@+id/go_detail_item"
        android:src="@drawable/icn_gobtn_1"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</LinearLayout>
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>